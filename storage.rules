rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.token.email == 'admin@cti-muebles.com';
    }
    match /{allOtherPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}